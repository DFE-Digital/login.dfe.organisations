<a href="/" class="link-back">Back</a>

<div class="grid-row">
    <div class="col-9">
        <h1 class="heading-xlarge">
            Manage services
        </h1>
    </div>
    <div class="col-3">
        <a class="button pull-right" href="/manage/services/new">Create Service</a>
    </div>
</div>

<div class="grid-row">
    <div class="col-12">
        <table>
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            <%
            for (let i = 0; i < locals.services.length; i++) {
                const service = locals.services[i];
            %>
            <tr>
                <td><%=service.id%></td>
                <td><%=service.name%></td>
                <td><%=(service.description && service.description.length > 20) ? `${service.description.substring(0, 17)}...` : service.description%></td>
                <td>
                    <span class="table-action"><a href="/manage/services/<%=service.id%>">Edit</a></span>
                </td>
            </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</div>