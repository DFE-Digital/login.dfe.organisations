CREATE TABLE IF NOT EXISTS "services"."service" ("id" UUID NOT NULL , "name" VARCHAR(255) NOT NULL, "description" VARCHAR(255), PRIMARY KEY ("id"));
CREATE TABLE IF NOT EXISTS "services"."organisation" ("id" UUID NOT NULL , "name" VARCHAR(255) NOT NULL, PRIMARY KEY ("id"));
CREATE TABLE IF NOT EXISTS "services"."user_services" ("id" UUID NOT NULL , "user_id" UUID NOT NULL , "status" SMALLINT NOT NULL, "role_id" SMALLINT NOT NULL DEFAULT 0, "organisation_id" UUID REFERENCES "services"."organisation" ("id") ON DELETE SET NULL ON UPDATE CASCADE, "service_id" UUID REFERENCES "services"."service" ("id") ON DELETE SET NULL ON UPDATE CASCADE, PRIMARY KEY ("id","user_id"));
CREATE TABLE IF NOT EXISTS "services"."invitation_services" ("invitation_id" UUID NOT NULL , "role_id" SMALLINT NOT NULL DEFAULT 0, "organisation_id" UUID REFERENCES "services"."organisation" ("id") ON DELETE SET NULL ON UPDATE CASCADE, "service_id" UUID REFERENCES "services"."service" ("id") ON DELETE SET NULL ON UPDATE CASCADE, PRIMARY KEY ("invitation_id"));
